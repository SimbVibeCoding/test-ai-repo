{
  "name": "retina/package",
  "type": "wordpress-theme",
  "description": "package per scaricare wordpress e il tema retina",
  "require": {

      "wpackagist-plugin/ultimate-addons-for-gutenberg":">=1.13.3",
      "wpackagist-plugin/w3-total-cache":">=0.9.7",
      "advanced-custom-fields/advanced-custom-fields-pro":"*",
      "wpackagist-plugin/contact-form-7":">=5.0.2",
      "wpackagist-plugin/contact-form-7-dynamic-text-extension":">=2.0.3",
      "wpackagist-plugin/query-monitor":">=3.0.1",
      "wpackagist-plugin/regenerate-thumbnails":">=3.1.0",
      "wpackagist-plugin/duplicate-post":">=3.1.0",
      "wpackagist-plugin/enable-media-replace":">=3.2.9",
      "wpackagist-plugin/pixelyoursite":">=7.0.4",
      "wpackagist-plugin/cache-enabler":">=1.3.3",
      "wpackagist-plugin/optimus":">=1.6.0",
      "wpackagist-plugin/mailchimp-for-wp":">=4.5.2",
      "wpackagist-plugin/worker": ">=4.8.1",
      "wpackagist-plugin/wp-mail-smtp":">=1.9.0",
      "wpackagist-plugin/svg-support":">=2.5.8",
      "wpackagist-plugin/wp-hooks-finder":">=1.3.1",
      "wpackagist-theme/wp-bootstrap-starter":">=3.1.0",
      "retina/wp-bootstrap-starter-child": "dev-master"
    },    "repositories": [      {
        "type": "composer",
  "url": "https://pivvenit.github.io/acf-composer-bridge/composer/v3/wordpress-plugin/"
      },
      {
           "type":"composer",
           "url":"https://wpackagist.org"
       },
        {
            "type": "vcs",
              "url":  "https://formazioneRetina@bitbucket.org/retina_sviluppo/wp-bootstrap-starter-child.git"
        }

    ],

    "extra": {
      "wordpress-install-dir": "wp",
      "installer-paths" : {
           "wp/wp-content/plugins/{$name}/" : ["type:wordpress-plugin"],
           "wp/wp-content/themes/{$name}/" : ["type:wordpress-theme"]
      }
    },
    "scripts": {
        "post-update-cmd": [
          "npm install",
          "wp plugin update --all --path=wp/",
          "wp plugin activate wp-mail-smtp --path=wp/",
          "wp language core update --path=wp/",
          "wp theme activate wp-bootstrap-starter-child --path=wp/"
        ]

    }
}
