{
  "name": "retina/package",
  "type": "wordpress-theme",
  "description": "package per scaricare wordpress e il tema retina",
  "require": {

    "wpackagist-theme/wp-bootstrap-starter":"3.1.0",
      "retina/wp-bootstrap-starter-child": "dev-master",
      "wpackagist-plugin/w3-total-cache":">=0.9.7",
      "wpackagist-plugin/all-in-one-wp-security-and-firewall":">=4.3.3.1",
      "wpackagist-plugin/webriti-smtp-mail":">=1.7",
      "wpackagist-plugin/wordfence":">=7.1.4",
      "advanced-custom-fields/advanced-custom-fields-pro":"*",
      "wpackagist-plugin/contact-form-7":">=5.0.2",
      "wpackagist-plugin/simply-show-hooks":">=1.2.1",
      "wpackagist-plugin/query-monitor":">=3.0.1",
      "wpackagist-plugin/google-analytics-dashboard-for-wp":">=5.3.5",
      "wpackagist-plugin/regenerate-thumbnails":">=3.1.0",
      "wpackagist-plugin/enable-media-replace":">=3.2.9",
      "wpackagist-plugin/cache-enabler":">=1.3.3",
      "wpackagist-plugin/optimus":">=1.6.0"
    },    "repositories": [      {
        "type": "package",
        "package": {
          "name": "advanced-custom-fields/advanced-custom-fields-pro",
          "version": "5.7.0",
          "type": "wordpress-plugin",
          "dist": {
            "type": "zip",
            "url": "https://connect.advancedcustomfields.com/index.php?p=pro&a=download"
          },
          "require": {
            "philippbaschke/acf-pro-installer": "^1.0",
            "composer/installers": "^1.0"
          }
        }
      },
      {
           "type":"composer",
           "url":"https://wpackagist.org"
       },
        {
            "type": "vcs",
              "url":  "https://formazioneRetina@bitbucket.org/retina_sviluppo/wp-bootstrap-starter-child.git"
        }

    ],

    "extra": {
      "wordpress-install-dir": "wp",
      "installer-paths" : {
           "wp/wp-content/plugins/{$name}/" : ["type:wordpress-plugin"],
           "wp/wp-content/themes/{$name}/" : ["type:wordpress-theme"]
      }
    },
    "scripts": {
        "post-update-cmd": [
            "gulp clean-git"
        ],
        "post-install-cmd": [
            "npm install",
            "gulp clean-git"
        ]

    }
}
